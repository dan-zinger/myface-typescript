<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Create Post</h1>
<form method="post" action="/posts/create">
    <label>
        Message:
        <input type="text" name="message" required/>
    </label>
    <br/>
    <label>
        Image URL:
        <input type="text" name="imageUrl" required/>
    </label>
    <br/>
    <label>
        User ID:
        <input type="text" name="userId" required/>
    </label>
    <br/>
    <button type="submit">Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>